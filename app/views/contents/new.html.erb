<% content_for(:html_title) { 'Create new content: Ceefuu' } %>
<section class="section">
  <div class="container">
    <div class="steps" id="stepsDemo">

      <!-- 5 STEPS -->
      <div class="step-item is-active is-black is-hidden-mobile">
        <div class="step-marker is-hidden-mobile">1</div>
        <div class="step-details is-hidden-mobile">
          <p class="step-title is-hidden-mobile">Overview</p>
        </div>
      </div>
      <div class="step-item is-hidden-mobile">
        <div class="step-marker is-hidden-mobile">2</div>
        <div class="step-details is-hidden-mobile">
          <p class="step-title is-hidden-mobile">Pricing</p>
        </div>
      </div>
      <div class="step-item is-hidden-mobile">
        <div class="step-marker is-hidden-mobile">3</div>
        <div class="step-details is-hidden-mobile">
          <p class="step-title is-hidden-mobile">Description</p>
        </div>
      </div>
      <div class="step-item is-hidden-mobile">
        <div class="step-marker is-hidden-mobile">4</div>
        <div class="step-details is-hidden-mobile">
          <p class="step-title is-hidden-mobile">Gallery</p>
        </div>
      </div>
      <div class="step-item is-hidden-mobile">
        <div class="step-marker is-hidden-mobile">5</div>
        <div class="step-details is-hidden-mobile">
          <p class="step-title is-hidden-mobile">Publish</p>
        </div>
      </div>

      <!-- FORM TO CREATE A NEW CONTENT HERE-->
      <%= form_for @content, html: {class: "steps-content m-l-0 m-r-0"} do |f| %>
        <div class="field">
            <label class="label">Content Title</label>
            <%= f.text_area :title, autocomplete: "title", class: "input" %>
        </div>
        <div class="field">
            <label class="label">Category</label>
            <%= f.select(:category_id,  options_for_select(@categories.map{ |c| [c.name, c.id] })) %>
        </div>
        <div class="field is-grouped is-grouped-centered m-t-25">
            <a href="" data-nav="previous" class="button is-light">Cancel</a>&nbsp;&nbsp;
            <%= f.submit "Save & Continue", class: "button is-black" %>
        </div>

      <% end %>
    </div>
  </div>
</section>
