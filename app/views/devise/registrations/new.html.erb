<style>
    :root {
      --brandColor: hsl(166, 67%, 51%);
      --background: rgb(247, 247, 247);
      --textDark: hsla(0, 0%, 0%, 0.66);
      --textLight: hsla(0, 0%, 0%, 0.33);
    }

    body {
      background: var(--background);
      height: 100vh;
      color: var(--textDark);
    }

    .field:not(:last-child) {
      margin-bottom: 1rem;
    }

    .register {
      margin-top: 3rem;
      background: white;
      border-radius: 10px;
    }

    .left,
    .right {
      padding: 4.5rem;
    }

    .left {
      border-right: 5px solid var(--background);
    }

    .left .title {
      font-weight: 800;
      letter-spacing: -2px;
    }

    .left .colored {
      color: var(--brandColor);
      font-weight: 500;
      margin-top: 1rem !important;
      letter-spacing: -1px;
    }

    .left p {
      color: var(--textLight);
      font-size: 1.15rem;
    }

    .right .title {
      font-weight: 800;
      letter-spacing: -1px;
    }

    .right .description {
      margin-top: 1rem;
      margin-bottom: 1rem !important;
      color: var(--textLight);
      font-size: 1.15rem;
    }

    .right small {
      color: var(--textLight);
    }

    input {
      font-size: 1rem;
    }

    input:focus {
      border-color: var(--brandColor) !important;
      box-shadow: 0 0 0 1px var(--brandColor) !important;
    }

    .fab,
    .fas {
      color: var(--textLight);
      margin-right: 1rem;
    }

  </style>
  <% content_for(:html_title) { 'Join Ceefuu: Sign up to continue' } %>
    <section class="container">
      <div class="columns is-multiline">
        <div class="column is-8 is-offset-2 register">
          <div class="columns">
            <div class="column left">
              <h1 class="title is-1">Ceefuu</h1>
              <h2 class="subtitle colored is-4">A new medium for selling digital content.</h2>
              <p class="has-text-black">We believe that great content is valuable and what you create matters. Our platform will enable creators to make a living by selling extraordinary content directly to their audience.</p>
            </div>
            <div class="column right">
              <h1 class="title is-4">Join Ceefuu</h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.hidden_field :username, value: @username %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <div class="control">
                      <%= f.label :your_name, class: "label" %>
                      <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input" %>
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <%= f.label :email, class: "label" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <%= f.label :password, class: "label" %>
                    <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <%= f.label :password_confirmation, class: "label" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
                  </div>
                </div>

                 <div class="field">
                  <div class="control">
                    <small class="has-text-black">I accept the <%= link_to 'Terms', terms_pages_path %>  and <%= link_to 'Privacy', privacy_pages_path %> </small>
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <%= f.submit "Sign up", class: "button is-block is-black is-fullwidth" %>
                  </div>
                </div>
                <% end %>
                <br>
                <small class="has-text-black">Already have an account? <%= link_to  "Login", new_user_session_path%></small><br>
            </div>
          </div>
        </div>
      </div>
    </section>