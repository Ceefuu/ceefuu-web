<style>
.section-feature-grey{

    background-color:#fbfbfb;

}

.app-side .title,.app-side .subtitle{text-align:center;max-width:550px;margin:2rem auto}

.mx-auto {
    width: 100%;
    margin-left: auto !important;
    margin-right: auto !important;
}

.max-w-4 {
    max-width: 27.5rem;
}

.columns.is-vcentered{-webkit-box-align:center;-ms-flex-align:center;align-items:center}

.title.is-narrow{margin-bottom:0;}

.py-6{padding-top:3rem !important;padding-bottom:1rem;}
.py-2 {
    text-align:left;
    padding-top: 0.5rem !important;
    padding-bottom: 0.5rem !important;
}

@media only screen and (min-width: 320px) and (max-width: 1024px) and (orientation: portrait) {

.b-centered-tablet-p {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    max-width: 1024px;
}

}
</style>

<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">

        <!-- Primary Meta Tags -->
        <meta name="title" content="Ceefuu - Share your knowledge 1:1 and earn money">
        <meta name="description" content="Ceefuu enables top instructors and industry experts to earn money by providing 1:1 guidance to students and professionals.">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://www.ceefuu.com/">
        <meta property="og:title" content="Ceefuu - Share your knowledge 1:1 and earn money">
        <meta property="og:description" content="Ceefuu enables top instructors and industry experts to earn money by providing 1:1 guidance to students and professionals.">
        <meta property="og:image" content="<%= image_url("ceefuu-og.png") %>">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://www.ceefuu.com/">
        <meta property="twitter:title" content="Ceefuu - Share your knowledge 1:1 and earn money">
        <meta property="twitter:description" content="Ceefuu enables top instructors and industry experts to earn money by providing 1:1 guidance to students and professionals.">
        <meta property="twitter:image" content="<%= image_url("ceefuu-og.png") %>">
<% end %>

<section class="hero is-medium is-light is-center">
    <div class="hero-body">
        <div class="container"><br><br>
        
            <h1 class="title has-text-black has-text-centered has-text-weight-bold is-2 is-size-4-mobile is-spaced main-title">
                Provide 1:1 guidance to students and professionals
            </h1>
           
            <h2 class="subtitle has-text-black is-4 is-size-6-mobile mb-4 mx-auto max-w-5 has-text-centered">
                Share your knowledge and change lives.
            </h2><br>
        

        <% if (!user_signed_in?) %>
        <div class="container has-text-centered">
            <%= link_to  "Become an instructor", new_user_registration_path, class: "button is-black", data: { turbolinks: false } %>
        </div>
          
        <% else %>
        <div class="container has-text-centered">
            <%= link_to 'Dashboard', dashboard_path, class: "button is-black is-medium m-t-10" %>
        <% end %>
        </div>

        </div>
    </div>
</section>


 <!--Features-->
    <div class="section">
        <div class="container">
    
            <div class="has-text-centered py-6">
                <h2 class="title has-text-black has-text-centered has-text-weight-bold is-2 is-size-4-mobile is-spaced main-title">How Ceefuu works</h2>
                <p class="subtitle has-text-black is-5 is-size-6-mobile mb-4 mx-auto max-w-5 has-text-centered">A medium for sharing your knowledge. </p>
            </div>
    
            <div class="py-6 small:mb-10">
                <div class="columns is-vcentered b-centered-tablet-p">
                    <div class="column is-6">
                        <%= image_tag "illustrations/card-1.jpg", class: "max-w-4 mx-auto is-block" %>
                    </div>
    
                    <div class="column is-5">
                        <h3 class="title is-4 is-narrow has-text-black">Create your first gig</h3>
                        <p class="py-2 max-w-4 text-medium has-text-center-tablet has-text-black b-centered-tablet-p">Ceefuu instructors are everyday creators, entrepreneurs, and professionals who are passionate about sharing their knowledge. Film your pitch and create your first gig in just five clicks.
                        </p>
                    </div>
                </div>
            </div>
    
            <div class="py-6 small:mb-10">
                <div class="columns is-vcentered b-centered-tablet-p">
                    <div class="column is-6 is-hidden-desktop">
                        <%= image_tag "illustrations/card-2.jpg", class: "max-w-4 mx-auto is-block" %>
                    </div>
                    <div class="column is-5 is-offset-1">
                        <h3 class="title is-4 is-narrow has-text-black">Share with your audience</h3>
                        <p class="py-2 max-w-4 text-medium has-text-center-tablet has-text-black b-centered-tablet-p">Once your gig is published, start sharing it with your audience across social media channels. Spend some time in creating a good looking profile. Provide a clear value proposition on how your skills and experiences are valuable. .
                        </p>
                    </div>
                    <div class="column is-6 is-hidden-mobile">
                        <%= image_tag "illustrations/card-2.jpg", class: "max-w-4 mx-auto is-block" %>
                    </div>
                </div>
            </div>
    
            <div class="py-6">
                <div class="columns is-vcentered b-centered-tablet-p">
                    <div class="column is-6">
                        <%= image_tag "illustrations/card-3.jpg", class: "max-w-4 mx-auto is-block" %>
                    </div>
    
                    <div class="column is-5">
                        <h3 class="title is-4 is-narrow has-text-black">Start earning weekly</h3>
                        <p class="py-2 max-w-4 text-medium has-text-center-tablet has-text-black b-centered-tablet-p">The potential for earning a meaningful income by sharing your skills and expertise is huge. Our instructors keep 100% of their revenue. Payouts are processed every week into your Stripe account.</p>
                    </div>
                </div>
            </div>
    
        </div>
    </div>

<%= render  "shared/footer" %>

<script>
    BulmaCarousel.attach('#carousel-category', {
        slidesToScroll: 1,
        slidesToShow: 4,
        infinite: true,
        pagination: false
    });
</script>
