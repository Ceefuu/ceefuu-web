<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">

        <!-- Primary Meta Tags -->
        <meta name="title" content="Ceefuu - Personalised guidance from your favorite creators">
        <meta name="description" content="Ceefuu enables top instructors and industry experts to earn money by providing personalised guidance to students and professionals.">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://www.ceefuu.com/">
        <meta property="og:title" content="Ceefuu - Personalised guidance from your favorite creators">
        <meta property="og:description" content="Ceefuu enables top instructors and industry experts to earn money by providing personalised guidance to students and professionals.">
        <meta property="og:image" content="<%= image_url("ceefuu-og.png") %>">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://www.ceefuu.com/">
        <meta property="twitter:title" content="Ceefuu - Personalised guidance from your favorite creators">
        <meta property="twitter:description" content="Ceefuu enables top instructors and industry experts to earn money by providing personalised guidance to students and professionals.">
        <meta property="twitter:image" content="<%= image_url("ceefuu-og.png") %>">
<% end %>

<section class="hero is-medium has-bg-img">
    <div class="hero-body">
        <div class="container"><br>
        
            <h1 class="title has-text-white has-text-left has-text-weight-bold is-2 is-size-4-mobile is-spaced main-title">
                Provide personalised guidance<br>to students and professionals
            </h1>
           
            <h2 class="subtitle has-text-white is-4 is-size-6-mobile mb-4 mx-auto max-w-5 has-text-left">
                Share your knowledge and start earning.
            </h2><br>
        

        <% if (!user_signed_in?) %>
        <div class="container has-text-left">
            <%= link_to  "Become an instructor", new_user_registration_path, class: "button is-white", data: { turbolinks: false } %>
        </div>
          
        <% else %>
        <div class="container has-text-left">
            <%= link_to 'Dashboard', dashboard_path, class: "button is-white is-medium m-t-10" %>
        <% end %>
        </div>

        </div>
    </div>
</section>

