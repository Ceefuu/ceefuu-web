<style>
.ellipsis {
  display: block;
  /* Fallback for non-webkit */
  display: -webkit-box;
  /*   max-width: 400px; */
  /*   height: 109.2px; */
  /* Fallback for non-webkit */
  margin: 0 auto;
  /*   font-size: 26px; */
  line-height: 1.4;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.is-ellipsis-2 {
  -webkit-line-clamp: 1;
}
</style>
<% content_for(:html_title) { 'Dashboard: Ceefuu' } %>
<section class="section">
    <div class="container">
        <div class="columns">
        
            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                                <figure class="image is-128x128">
                                    <%= image_tag avatar_url(current_user), class: "is-rounded" %>
                                </figure>
                            </div>
                            
                            <div class="card-content">

                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                    <p class="title is-5"><%= current_user.full_name %></p>
                                    <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post do |f| %>
                                        <div class="file">
                                            <label class="button is-black is-outlined is-fullwidth">
                                                <%= f.file_field :avatar, class: "file-input", onchange: "this.form.submit();" %>
                                                <i class="fas fa-upload"></i>&nbsp;&nbsp;&nbsp; Upload Avatar
                                            </label>
                                        </div>
                                    <% end %>
                                </div>
                                <hr class="h-10">
                                
                                <!-- From -->
                                <article>
                                    <div class="media">
                                        <div class="media-content">Location</div>
                                        <div class="media-right">
                                            <strong><%= current_user.from %></strong> <i class="toggle far fa-edit" aria-controls="user-from"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-from', class: 'is-hidden'} do |f| %>
                                            <div class="field">
                                                <%= f.text_field :from, autofocus: true, autocomplete: 'form', class: 'input'%>
                                            </div>
                                            <a class="toggle button is-light" aria-controls="user-from">Cancel</a>
                                            <%= f.submit "Save", class: "button is-black" %>
                                        <% end %>
                                    </div>

                                </article>                                
                                <hr class="h-10">

                                <!-- Online Status -->
                                <article>
                                    <div class="media">
                                        <div class="media-content">Status</div>
                                        <div class="media-right">
                                            <strong><% if current_user.status %> Online <% else %> Offline <% end %></strong> <i class="toggle far fa-edit" aria-controls="user-status"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-status', class: 'is-hidden'} do |f| %>
                                            <div class="field">
                                                <%= f.select(:status, options_for_select([["Online", true], ["Offline", false]]), {}, {class: "select is-fullwidth"}) %>
                                            </div>
                                            <a class="toggle button is-light" aria-controls="user-status">Cancel</a>
                                            <%= f.submit "Save", class: "button is-black" %>
                                        <% end %>
                                    </div>
                                </article>
                                
                                <!-- Subscription -->
                                <% if @subscription.present? %>
                                    <hr class="h-10">
                                    <article>
                                        <div class="media">
                                            <div class="media-content">Subscription</div>
                                            <div class="media-right">
                                                <strong><% if @plan %> <%= @plan.nickname %> <% end %></strong> <i class="toggle far fa-edit" aria-controls="user-subscription"></i>
                                            </div>
                                        </div>

                                        <div class="content">
                                            <%= form_with url: remove_subscription_path, method: :delete, html: { id: 'user-subscription', class: 'is-hidden' } do |f| %>
                                                <small>Expire at: <%= @subscription.expired_at %></small>                 
                                                <%= f.submit "Cancel My Subscription", class: "button is-danger is-fullwidth m-t-20" %>
                                            <% end %>
                                        </div>
                                    </article>
                                <% end %>
                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->
                                <article>
                                    <div class="media">
                                        <div class="media-content">
                                            <p>
                                                <strong>Bio</strong>
                                                <br>
                                                <%= current_user.about %>
                                            </p>
                                        </div>
                                        <div class="media-right">
                                            <i class="toggle far fa-edit" aria-controls="user-about"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-about', class: 'is-hidden'} do |f| %>
                                            <div class="field">
                                                <%= f.text_area :about, autofocus: true, autocomplete: 'form', class: 'input'%>
                                            </div>
                                            <a class="toggle button is-light" aria-controls="user-about">Cancel</a>
                                            <%= f.submit "Save", class: "button is-black" %>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">

                                <!-- Language -->
                                <article>
                                    <div class="media">
                                        <div class="media-content">
                                            <p>
                                                <strong>Language</strong>
                                                <br>
                                                <%= current_user.language %>
                                            </p>
                                        </div>
                                        <div class="media-right">
                                            <i class="toggle far fa-edit" aria-controls="user-language"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-language', class: 'is-hidden'} do |f| %>
                                            <div class="field">
                                                <%= f.text_field :language, autofocus: true, autocomplete: 'form', class: 'input'%>
                                            </div>
                                            <a class="toggle button is-light" aria-controls="user-language">Cancel</a>
                                            <%= f.submit "Save", class: "button is-black" %>
                                        <% end %>
                                    </div>

                                </article>
                                <hr class="h-10">
                                
                                <!-- Linked Account -->
                                <article class="media">
                                    <div class="content">
                                        <p>
                                            <strong>Linked Account</strong><br/>
                                            <% if current_user.provider %>
                                                <span class="has-text-success">Facebook verified</span>
                                            <% else %>
                                                <%= link_to 'Connect to Facebook', user_facebook_omniauth_authorize_path, class: "has-text-black" %>
                                            <% end %>
                                        </p>
                                    </div>
                                </article>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="columns is-multiline">

                    <!-- Create New Content -->
                    <div class="column is-one-third has-text-centered">
                        <%= link_to new_content_path do %>
                            <div class="card">

                                <div class="card-image card-content is-horizontal-center is-flex ">
                                    <figure class="image is-128x128 ">
                                        <%= image_tag 'icon_add.png' %>
                                    </figure>
                                </div>

                                <div class="card-content">
                                    <strong>Create new</strong>
                                </div>    

                            </div>
                        <% end %>
                    </div>


                    <!-- Content -->
                    <% current_user.contents.each do |content| %>

                        <div class="column is-one-third">
                            <div class="card">

                                <div class="card-image">
                                    <%= link_to edit_content_path(content) do %>
                                        <figure class="image is-5by3">
                                            <%= image_tag content_cover(content) %>
                                        </figure>
                                    <% end %>
                                </div>

                                <div class="card-content p-t-5 p-b-5">
                                    <p class="subtitle is-6 m-b-5 ellipsis is-ellipsis-2"><%= link_to content.title, content_path(content), class: "has-text-black" %></p>
                                    <span class="star-review"><i class="fa fa-star"></i>
                                        <%= content.average_rating %>
                                        <span class="has-text-dark">(<%= content.reviews.count %>)</span>
                                    </span>                                        
                                </div>

                        <footer class="card-footer">
                                <span class="card-footer-item">
                                    <%= link_to edit_content_path(content) do %>
                                        <small class="has-text-black">
                                            Edit
                                        </small>
                                    <% end %>
                                </span>

                            <a class="has-text-black is-block card-footer-item has-text-centered">
                                <% basic_price = content.pricings.find{ |p| p.pricing_type == 'basic' } %> 
                                <% if !basic_price.nil? %>
                                            <span class="small-title">STARTING AT</span> 
                                            <strong><%= number_to_currency(basic_price.price) %></strong>                                            
                                        <% else %>
                                            <strong>
                                                <span class="small-title has-text-dark">NO PRICING YET</span>
                                            </strong>
                                        <% end %>
                            </a>
                        </footer>  
                                
                            </div>
                        </div>

                    <% end %>
                    
                </div>
            </div>
            
        </div>
    </div>
</section>
<%= render "shared/footer" %>