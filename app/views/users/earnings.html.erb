<% content_for(:html_title) { 'Earnings: Ceefuu' } %>
<section class="section">
    <div class="container">
        <p class="title">Earnings</p>

        <div class="card">
            <div class="card-content">
                <div class="columns has-text-centered">
                    <div class="column">
                        Lifetime income
                        <p class="is-size-4"><%= number_to_currency(@net_income) %></p>
                    </div>
                </div>
            </div>
        </div>


        <!-- Transactions List -->
        <div class="card m-t-20">
            <div class="card-header">
                <div class="card-header-title">Transaction History</div>
            </div>
            <div class="card-content">
            <div style="overflow-x:auto;">
                <table class="table is-striped is-narrow is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th>Date</th> 
                            <th class="is-hidden-mobile">Source</th>    
                            <th>Type</th>
                            <th>Status</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @transactions.each do |t| %>
                            <tr>
                                <td><%= t.created_at.strftime('%d, %b %Y') %></td>
                                <td class="is-hidden-mobile"><%= t.content ? t.content.title : "Withdraw Amount" %></td>
                                <td><%= t.transaction_type %></td>
                                <td><span class="tag"><%= t.status %></span></td>
                                <td>
                                    <span class="<%= current_user.id == t.buyer_id ? 'has-text-black' : 'has-text-success' %>">
                                        <%= current_user.id == t.buyer_id ? '-' : '+' %>
                                        $<%= current_user.id == t.buyer_id ? t.amount : (t.amount / 1.1).round(2) %>
                                    </span>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= paginate @transactions %>
            </div>
        </div>
        </div>
    </div>
</section>