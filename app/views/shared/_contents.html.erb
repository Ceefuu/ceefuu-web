<% @contents.each do |content| %>
<%#- binding.pry %>
    <div class="column is-one-third">
        <div class="card">

            <div class="card-image">
                <%#= link_to content_path(content) do %>
                    <!-- <figure class="image is-4by4">
                        <%= image_tag content_cover(content) %>
                    </figure> -->
                    <div class="column is-full">   
                        <div class="card">
                            <div class="card-content">
                                <div class="content">
                                    <p class="title is-4"><%= content.title %></p>
                                </div>
                                <hr>
                                <div class="hero-carousel" id="carousel-photo">
                                    <% if content.pitch.present? %>
                                        <div class="video-container">
                                            <iframe src="https://www.youtube.com/embed/<%= content.pitch %>" allowfullscreen></iframe>
                                        </div>
                                    <% end %>
                                    <% content.photos.each do |photo| %>
                                        <div class="carousel-item has-background image is-16by9">
                                            <%= image_tag url_for(photo), class: "is-background", width: "100%" %>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                <%# end %>
            </div>

            <div class="card-content p-t-5 p-b-5">
                <p class="subtitle is-6 m-b-5"><%= link_to content.title.truncate(20), content_path(content) %></p>
                <span class="star-review"><i class="fa fa-star"></i>
                    <%= content.average_rating %>
                    <span class="has-text-primary">(<%= content.reviews.count %>)</span>
                </span>                                        
            </div>

            <footer class="card-footer">
                <span class="card-footer-item">
                    <%= link_to users_path(content.user) do %>
                        <figure class="image is-32x32">
                            <%= image_tag avatar_url(content.user), class: "is-rounded" %>
                        </figure>
                    <% end %>
                </span>
                <a class="has-text-danger is-block card-footer-item has-text-right">
                    <span class="small-title">STARTING AT</span> 
                    <strong>$<%= content.price %></strong>
                </a>
            </footer>  
            
        </div>
    </div>

<% end %>
<script>
    BulmaCarousel.attach('#carousel-photo', {
        slidesToScroll: 1,
        slidesToShow: 1
    });

    $(document).ready(function() {
        $('#tabs li').on('click', function() {
            var type = $(this).data('tab');

            $('#tabs li').removeClass('is-active');
            $(this).addClass('is-active');

            $('.tab-content').hide();
            $('#tab-' + type).show();
        }) 
    })

</script>