<% @contents.each do |content| %>

    <div class="column is-one-third">
        <div class="card">

            <div class="card-image">
                <%= link_to content_path(content) do %>
                    <figure class="image is-4by3">
                        <%= image_tag content_cover(content) %>
                    </figure>
                <% end %>
            </div>

            <div class="card-content p-t-5 p-b-5">
                <p class="subtitle is-6 m-b-5"><%= link_to content.title.truncate(20), content_path(content) %></p>
                <span class="star-review"><i class="fa fa-star"></i>
                    <%= content.average_rating %>
                    <span class="has-text-primary">(<%= content.reviews.count %>)</span>
                </span>                                        
            </div>

            <footer class="card-footer">
                <span class="card-footer-item">
                    <%= link_to users_path(content.user) do %>
                        <figure class="image is-32x32">
                            <%= image_tag avatar_url(content.user), class: "is-rounded" %>
                        </figure>
                    <% end %>
                </span>
                <a class="has-text-danger is-block card-footer-item has-text-right">
                    <span class="small-title">STARTING AT</span> 
                    <strong>$<%= content.price %></strong>
                </a>
            </footer>  
            
        </div>
    </div>

<% end %>